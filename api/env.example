# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/edu_flow?schema=public

# JWT Configuration
JWT_ACCESS_SECRET=your-very-long-random-access-secret-min-32-chars
JWT_REFRESH_SECRET=your-very-long-random-refresh-secret-min-32-chars
JWT_ISSUER=edu-flow
JWT_AUDIENCE=edu-flow-ui

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Security Configuration
BCRYPT_ROUNDS=12
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_ATTEMPTS=5
