model Month {
  id          Int      @id @default(autoincrement())
  idYear      Int      @map("id_year")
  year        Year     @relation(fields: [idYear], references: [id], onDelete: Cascade)
  idQuarter   Int?     @map("id_quarter")
  quarter     Quarter? @relation(fields: [idQuarter], references: [id], onDelete: SetNull)
  month       Int
  name        String
  shortName   String
  daysInMonth Int
  dateBegin   DateTime
  dateEnd     DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  days Date[]

  @@unique([idYear, month])
}
