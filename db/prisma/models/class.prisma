model Class {
  id        String   @id @default(cuid())
  grade     Int
  letter    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  lessons Lesson[]
  classStudents ClassStudent[]
  id_classLeaderTeacher String? 
  classLeader Teacher? @relation("TeacherClassLeadership", fields: [id_classLeaderTeacher], references: [id], onDelete: SetNull)

  @@map("classes")
}
