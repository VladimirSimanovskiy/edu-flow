model Teacher {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  middleName String?
  email     String?
  phone     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Teacher-specific fields
  assignedClassroomId String? // Assigned classroom (кабинет)

  // Relations
  userId    String? @unique
  user      User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  subjects  TeacherSubject[]
  lessons   Lesson[]
  
  // Teacher-specific relations
  assignedClassroom Classroom? @relation("TeacherClassroom", fields: [assignedClassroomId], references: [id], onDelete: SetNull)
  classLeaderships  Class[]    @relation("TeacherClassLeadership") // One teacher can lead multiple classes
  
  // Calendar is independent - no direct relations

  @@map("teachers")
}
