{
	"useTabs": true,
	"tabWidth": 4,
	"printWidth": 100,
	"semi": true,
	"singleQuote": true,
	"quoteProps": "as-needed",
	"trailingComma": "es5",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "avoid",
	"endOfLine": "lf",
	"overrides": [
		{
			"files": "*.{ts,tsx}",
			"options": {
				"useTabs": true,
				"tabWidth": 4
			}
		},
		{
			"files": "*.{js,jsx}",
			"options": {
				"useTabs": true,
				"tabWidth": 4
			}
		},
		{
			"files": "*.json",
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": "*.{yml,yaml}",
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": "*.{css,scss,sass}",
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
